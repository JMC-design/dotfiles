# xchainkeys configuration file
#

# chain options
timeout 5000

# feedback options

feedback on       # enable feedback
delay 1000        # display current key combination
hold 1000         # display error messages for 1 second
position center   # center feedback window

font fixed        # use the font "fixed" for the popup window
foreground black  # black text and border
background white  # white background

# keybindings

C-t :enter
C-t C-t :escape
C-t C-g :abort
C-t C-r :reload

# execute commands
C-t e W-g :abort
C-t e b :exec vp.sh
C-t e m :exec smplayer

# misc
W-e :exec dmenu_run
C-t semicolon s :exec toggle-speakers.sh > /dev/null 2>&1
C-t semicolon t :exec toggle-touchpad.sh > /dev/null 2>&1

# mpc
C-t m W-g :abort
C-t m space :exec mpc toggle | grep '\[' | cut -c1-10
C-t m o :exec mpc stop > /dev/null && echo "[stop]"
C-t m e :exec mpc volume +10 | grep volume | cut -c1-11
C-t m d :exec mpc volume -10 | grep volume | cut -c1-11
C-t m u :exec mpc update --wait > /dev/null && echo "mpd database updated"
C-t m c :exec mpc clear > /dev/null && echo "mpd cleared"
#C-t m r :exec mpc crop > /dev/null && echo "mpd cropped"
C-t m l :exec mpc prev -f "%artist% - %title%" | head -1
C-t m m :exec mpc next -f "%artist% - %title%" | head -1

## desktop management
# move to desktop
W-1 :exec wmctrl -s 0
W-2 :exec wmctrl -s 1
W-3 :exec wmctrl -s 2
W-4 :exec wmctrl -s 3
W-5 :exec wmctrl -s 4
# move current window to desktop
W-S-1 :exec wmctrl -r \:ACTIVE\: -t 0
W-S-2 :exec wmctrl -r \:ACTIVE\: -t 1
W-S-3 :exec wmctrl -r \:ACTIVE\: -t 2
W-S-4 :exec wmctrl -r \:ACTIVE\: -t 3
W-S-5 :exec wmctrl -r \:ACTIVE\: -t 4

# wmctrl
W-d :exec wmctrl -c \:ACTIVE\:
